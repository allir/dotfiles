# Set the shell
shell -${SHELL}

# Big scrollback
defscrollback 5000

# Detach on SIGHUP
autodetach on

# Hide startup message
startup_message off

hardstatus on
hardstatus alwayslastline
#hardstatus string "%{=b}%{G} Screen(s): %{b}%w"
hardstatus string "%{.kW}%-w%{.bW}%t [%n]%{-}%+w %=%{..G} %H %{..Y} %Y/%m/%d %c"
