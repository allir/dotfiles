# Set the shell
shell -${SHELL}

# Big scrollback
defscrollback 10000

# Detach on SIGHUP
autodetach on

# Hide startup message
startup_message off

# Unbind lockscreen
bind x
bind C-x

# Resize the current region
bind = resize =
bind + resize +3
bind - resize -3

hardstatus on
hardstatus alwayslastline
#hardstatus string "%{=b}%{G} Screen(s): %{b}%w"
hardstatus string "%{.kG}%-w%{.Gk}%t [%n]%{-}%+w %=%{..G} %H %{..G} %d/%m/%Y %C"
